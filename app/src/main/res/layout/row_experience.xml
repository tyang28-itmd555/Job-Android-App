<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/dateDebut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mai 2016"
        android:textColor="#34495e"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/dateFin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="septembre 2016"
        android:textColor="#34495e"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintLeft_toRightOf="@+id/dateDebut"
        android:layout_marginLeft="8dp"
        android:id="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="29dp" />

    <TextView
        android:id="@+id/expPosition"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginLeft="8dp"
        android:layout_marginRight="3dp"
        android:text="junior dev"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/dateFin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="27dp" />
    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sonatel "
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/expCompany"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/expPosition" />
    <TextView
        android:id="@+id/expAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="dgnhfghfghfghfghfghfghfgh"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/expCompany" />

</androidx.constraintlayout.widget.ConstraintLayout>